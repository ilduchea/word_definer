<h2> Create Your Word </h2>
<form action="/word" method="post">
  <label for="word">Enter a Word:</label>
  <input name="word" type="text" required>
  <button type="submit" class="btn btn-success">Add Word</button>
</form>
<hr>
<h2>Words</h2>
<ul>
  <% @words.each() do |word| %>
  <li><a href="/words/<%= word.id() %>"><%= word.word() %></a></li>
  <% end %>
</ul>
<hr>
<form action="/clear" method="post">
  <button class="btn btn-danger" type="submit" name="clear">Remove all Words</button>
</form>
