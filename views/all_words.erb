<h2>All Words with Their Definitions</h2>

<ul>
  <% @words.each() do |word| %>
  <li><a href="/words/<%= word.id() %>"><%= word.word() %></a></li>
  <ul>
    <% word.definitions().each do |definition|%>
      <li>
        <p>
           <%= definition %>
        </p>
      </li>
    <% end %>
  </ul>
  <% end %>
</ul>
<hr>
<a href="/"><button class="buttons" type="button" name="home">Home</button></a>
